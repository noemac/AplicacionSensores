@model sensoresapp.Models.Sensor

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Sensores</h2>

@using (Html.BeginForm("Buscar", "Sensor", FormMethod.Post, new { encType = "multipart/form-data", id = "myform", name = "myform" }))
{
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Criterios de búsqueda</legend>

        @Html.Label("buscar", "Sensor:")

        @*Se vincula el drowdownlist con el modelo*@
        @Html.DropDownListFor(model => model.Id, ViewBag.SensoresDDL as SelectList)

        @*@Html.EditorFor(model => model.Id,
        new { htmlAttributes = new { @id = "id" } })*@
        @Html.Label("minHijos", "Fecha desde:")
        @Html.EditorFor(model => model.FechaDesde,
        new { htmlAttributes = new { @class = "date-time-picker", @id="minHijos" } })
        @Html.Label("maxHijos", "Fecha hasta:")
        @Html.EditorFor(model => model.FechaHasta,
        new { htmlAttributes = new { @class = "date-time-picker", @id = "maxHijos" } })


        <input type="submit" value="Buscar" />
    </fieldset>
}
<br />



