<link href="~/Css/Sitio.css" rel="stylesheet" />

<div id="divResultados">

    @if (ViewBag.resultado != null)
    {

            <!--09- armo la tabla con los datos-->
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <tr class="success">
                            <th>
                                Sensores
                            </th>
                        </tr>

                        <!--10- itero los datos listado en ViewBag.resultado-->
                        @foreach (var item in ViewBag.resultado)
                        {
                            <tr>
                                <td>
                                    <div class="row">
                                        <div class="col-md-12  text-center">
                                            <h4>Temperatura - sensor @item.id</h4>
                                            <canvas id="barChartTemperatura"></canvas>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>


    }
    <span class="text-danger">@Html.Raw(ViewBag.Mensaje)</span>
</div>



